<script>
feather.replace();

// SAMPLE DATA (Replace with API fetch calls later)
const today_expense = 500;
const yesterday_expense = 300;
const week_expense = 3500;
const month_expense = 15000;
const year_expense = 120000;
const total_expense = 500000;

const categories = ["Food", "Transport", "Shopping", "Bills"];
const category_expenses = [4000, 2000, 5000, 3000];

const daily_labels = ["Aug 4", "Aug 5", "Aug 6", "Aug 7", "Aug 8", "Aug 9", "Aug 10"];
const daily_data = [500, 700, 300, 900, 1200, 800, 600];

const monthly_labels = ["2024-09", "2024-10", "2024-11", "2024-12", "2025-01", "2025-02", "2025-03"];
const monthly_data = [12000, 15000, 11000, 17000, 20000, 18000, 19000];

const yearly_labels = ["2021", "2022", "2023", "2024", "2025"];
const yearly_data = [100000, 120000, 140000, 160000, 180000];

// FUNCTION to create expense cards
function createCard(title, amount) {
  return `
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">${title}</h5>
        <p class="card-text">â‚¹${amount}</p>
      </div>
    </div>
  `;
}

// Insert cards
document.getElementById("card-today").innerHTML = createCard("Today's Expense", today_expense);
document.getElementById("card-yesterday").innerHTML = createCard("Yesterday's Expense", yesterday_expense);
document.getElementById("card-week").innerHTML = createCard("Last 7 Days", week_expense);
document.getElementById("card-month").innerHTML = createCard("Last 30 Days", month_expense);
document.getElementById("card-year").innerHTML = createCard("Current Year", year_expense);
document.getElementById("card-total").innerHTML = createCard("Total Expense", total_expense);

// Chart.js graphs
new Chart(document.getElementById('expense_category_pie'), {
  type: 'bar',
  data: {
    labels: categories,
    datasets: [{
      label: 'Expense by Category',
      data: category_expenses,
      backgroundColor: ['#6f42c1','#dc3545','#28a745','#007bff']
    }]
  }
});

new Chart(document.getElementById('expense_line'), {
  type: 'line',
  data: {
    labels: daily_labels,
    datasets: [{
      label: 'Daily Expenses',
      data: daily_data,
      borderColor: '#6f42c1',
      fill: false,
      borderWidth: 2
    }]
  }
});

new Chart(document.getElementById('monthly_expense_line'), {
  type: 'line',
  data: {
    labels: monthly_labels,
    datasets: [{
      label: 'Monthly Expenses',
      data: monthly_data,
      borderColor: '#fd7e14',
      fill: false,
      borderWidth: 2
    }]
  }
});

new Chart(document.getElementById('expense_yearly_line'), {
  type: 'bar',
  data: {
    labels: yearly_labels,
    datasets: [{
      label: 'Yearly Expenses',
      data: yearly_data,
      backgroundColor: '#28a745'
    }]
  }
});
</script>
